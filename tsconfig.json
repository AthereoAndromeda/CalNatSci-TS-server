{
    "compilerOptions": {
        "target": "ESNext",
        "baseUrl": ".",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "strict": true,
        "module": "CommonJS",
        "esModuleInterop": true,
        "pretty": true,
        "strictNullChecks": true,
        "typeRoots": [
            "./typings",
            "./node_modules/@types",
            "./node_modules/**/*"
        ]
    },
    "ts-node": {
        "transpileOnly": true,
        "transpiler": "ts-node/transpilers/swc-experimental",
    },
    "exclude": [
        "prisma",
        "tests",
        "others"
    ]
}